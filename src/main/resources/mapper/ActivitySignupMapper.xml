<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.java.mapper.ActivitySignupMapper">

    <insert id="signup" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO activity_signup (user_id, activity_id)
        VALUES (#{userId}, #{activityId})
    </insert>

<!--    <insert id="insert" parameterType="com.java.pojo.ActivitySignup">-->
<!--        INSERT INTO activity_signup-->
<!--            (user_id, activity_id, signup_time, remark)-->
<!--        VALUES (#{userId}, #{activityId}, NOW(), #{remark})-->
<!--    </insert>-->

    <delete id="deleteById" parameterType="int">
        DELETE FROM activity_signup WHERE id = #{id}
    </delete>

<!--    <update id="updateRemark" parameterType="com.java.pojo.ActivitySignup">-->
<!--        UPDATE activity_signup-->
<!--        SET remark = #{remark}-->
<!--        WHERE id = #{id}-->
<!--    </update>-->
    <update id="updateRemark">
        UPDATE activity_signup
        SET remark = #{remark}
        WHERE id = #{id}
    </update>
    <select id="selectById" resultType="com.java.pojo.ActivitySignup">
        SELECT * FROM activity_signup WHERE id = #{id}
    </select>

    <select id="selectByUserId" resultType="com.java.pojo.ActivitySignup">
        SELECT * FROM activity_signup WHERE user_id = #{userId}
    </select>

    <select id="selectByActivityId" resultType="com.java.pojo.ActivitySignup">
        SELECT * FROM activity_signup WHERE activity_id = #{activityId}
    </select>

    <select id="checkSignup" resultType="com.java.pojo.ActivitySignup">
        SELECT * FROM activity_signup
        WHERE user_id = #{userId} AND activity_id = #{activityId}
    </select>


    <select id="selectAllSignups" resultType="com.java.pojo.ActivitySignup">
        SELECT * FROM activity_signup
    </select>
    <update id="updateSignup" parameterType="com.java.pojo.ActivitySignup">
        UPDATE activity_signup
        SET approved = #{approved}
        WHERE id = #{id}
    </update>
</mapper>