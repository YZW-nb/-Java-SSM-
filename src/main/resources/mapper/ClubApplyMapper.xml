<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.mapper.ClubApplyMapper">
    <!-- 提交申请 -->
    <insert id="insertApply" parameterType="com.java.pojo.ClubApply" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO club_apply (club_id, user_id, reason, status)
        VALUES (#{clubId}, #{userId}, #{reason}, #{status})
    </insert>

    <!--审核申请-->
    <update id="updateApplyStatus">
        UPDATE club_apply
        SET status = #{status},
            review_time = #{reviewTime}
        WHERE id =#{id}
    </update>

    <!-- 根据ID申请查询 -->
<!--    <select id="selectById" parameterType="int" resultType="com.java.pojo.ClubApply">-->
<!--        SELECT * FROM club_apply WHERE id =#{id}-->
<!--    </select>-->

    <!--管理员查询待审核申请-->
    <select id="selectPendingByClubId" parameterType="int" resultType="com.java.pojo.ClubApply">
        SELECT * FROM club_apply
        WHERE club_id = #{clubId} AND status = 'pending'
        ORDER BY apply_time ASC
    </select>

    <!--用户查询我的申请记录-->
    <select id="selectByUserId" parameterType="int" resultType="com.java.pojo.ClubApply">
        SELECT * FROM club_apply
        WHERE user_id = #{userId}
        ORDER BY apply_time DESC
    </select>

    <!--检查是否已申请该社团-->
    <select id="checkExist" resultType="int">
        SELECT COUNT(*) FROM club_apply
        WHERE club_id = #{clubId} AND user_id = #{userId}
    </select>
    <select id="countPendingByClubId" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM club_apply
        WHERE club_id = #{clubId}
          AND status = 'pending'
    </select>
    <select id="selectByClubId" resultMap="BaseResultMap">
        SELECT *
        FROM club_apply
        WHERE club_id = #{clubId}
        ORDER BY apply_time DESC
    </select>
    <!-- 定义基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.java.pojo.ClubApply">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="user_id" property="userId" jdbcType="INTEGER" />
        <result column="club_id" property="clubId" jdbcType="INTEGER" />
        <result column="reason" property="reason" jdbcType="VARCHAR" />
        <result column="apply_time" property="applyTime" jdbcType="TIMESTAMP" />
        <result column="status" property="status" jdbcType="VARCHAR" />
    </resultMap>

    <select id="selectById" resultType="com.java.pojo.ClubApply">
        SELECT * FROM club_apply WHERE id = #{id}
    </select>

    <update id="reviewById">
        UPDATE club_apply
        SET
            status = #{status},
            Review_time = #{reviewTime}
        WHERE id = #{id}
    </update>
</mapper>